@model List<ProjectSDA.Models.Student>;


@{
	ViewData["Title"] = "All Students";
	// Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Students</h2>
<p>
	<a asp-controller="Student" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var std in Model)
        {
            <tr>
                <td>@std.Id</td>
                <td>@std.name</td>
                <td>@std.age</td>

				<td>
					<a asp-controller="Student" asp-action="Update" asp-route-id="@std.Id">Edit</a> |
					<a asp-controller="Student" asp-action="Delete" asp-route-id="@std.Id">Delete</a>
				</td>

            </tr>
        }

    </tbody>

</table>





